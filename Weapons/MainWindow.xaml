<Window x:Class="Weapons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weapons"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="CB_1" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CB_1_SelectionChanged">
            <ComboBoxItem Content="Холодное"/>
            <ComboBoxItem Content="Огнестрельное"/>
            <ComboBoxItem Content="Ядерное"/>
        </ComboBox>
        <ComboBox x:Name="CB_2" HorizontalAlignment="Left" Margin="146,81,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CB_2_SelectionChanged"/>
        <ComboBox x:Name="CB_3" HorizontalAlignment="Left" Margin="280,81,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="B_Add" Content="Button" HorizontalAlignment="Left" Margin="417,81,0,0" VerticalAlignment="Top" Width="131" Height="22" Click="B_Add_Click"/>
        <TextBox x:Name="TB_One" HorizontalAlignment="Left" Margin="10,124,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="538" Height="141"/>

    </Grid>
</Window>
